{
    "name": "frontend",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "// Development": "========== Development Commands ==========",
        "dev": "vite dev --host 0.0.0.0 --port 5173",
        "dev:smart": "node scripts/dev-smart.mjs",
        "dev:open": "vite dev --host 0.0.0.0 --port 5173 --open",
        "dev:https": "vite dev --host 0.0.0.0 --port 5173 --https",
        "dev:debug": "DEBUG=vite:* vite dev --host 0.0.0.0 --port 5173",
        "// Building": "========== Build Commands ==========",
        "prebuild": "npm run clean && npm run check",
        "build": "vite build",
        "build:prod": "cross-env NODE_ENV=production vite build --mode production",
        "build:staging": "cross-env NODE_ENV=staging vite build --mode staging",
        "build:analyze": "cross-env ANALYZE=true npm run build",
        "build:stats": "vite-bundle-analyzer dist/stats.html",
        "postbuild": "npm run build:verify",
        "build:verify": "node scripts/build-verify.mjs",
        "// Preview & Serve": "========== Preview Commands ==========",
        "preview": "vite preview --host 0.0.0.0 --port 4173",
        "preview:open": "vite preview --host 0.0.0.0 --port 4173 --open",
        "serve": "npm run preview",
        "serve:prod": "npm run build:prod && npm run preview",
        "// Testing": "========== Testing Commands ==========",
        "pretest": "npm run lint:fix",
        "test": "vitest run",
        "test:unit": "vitest run --reporter=verbose",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "test:browser": "vitest run --browser.enabled --browser.name=chromium",
        "test:ci": "vitest run --reporter=junit --outputFile=test-results.xml",
        "test:debug": "vitest run --inspect-brk",
        "// Quality Assurance": "========== QA Commands ==========",
        "prepare": "svelte-kit sync",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --threshold error",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "typecheck": "npm run check",
        "// Linting & Formatting": "========== Code Quality Commands ==========",
        "lint": "eslint . --ext .js,.ts,.svelte --max-warnings 0",
        "lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
        "lint:report": "eslint . --ext .js,.ts,.svelte --format html --output-file eslint-report.html",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "format:staged": "lint-staged",
        "// Maintenance": "========== Maintenance Commands ==========",
        "clean": "rimraf build dist .svelte-kit coverage test-results.xml eslint-report.html",
        "clean:deps": "rimraf node_modules package-lock.json && npm install",
        "clean:cache": "rimraf .svelte-kit/generated .vite",
        "clean:all": "npm run clean && npm run clean:cache && npm run clean:deps",
        "// Dependencies": "========== Dependency Management ==========",
        "deps:check": "npm-check-updates",
        "deps:update": "npm-check-updates -u && npm install",
        "deps:audit": "npm audit",
        "deps:audit:fix": "npm audit fix",
        "deps:outdated": "npm outdated",
        "// Deployment": "========== Deployment Commands ==========",
        "predeploy": "npm run ci",
        "deploy": "echo \"Deployment script not configured\" && exit 1",
        "deploy:staging": "npm run build:staging && echo \"Deploy to staging\"",
        "deploy:prod": "npm run build:prod && echo \"Deploy to production\"",
        "// CI/CD Pipeline": "========== CI/CD Commands ==========",
        "ci": "node scripts/ci-pipeline.mjs --env=production",
        "ci:quick": "node scripts/ci-pipeline.mjs --env=development --skip-tests",
        "ci:full": "node scripts/ci-pipeline.mjs --env=production --verbose",
        "ci:staging": "node scripts/ci-pipeline.mjs --env=staging",
        "// Utilities": "========== Utility Commands ==========",
        "start": "npm run dev",
        "info": "npm run --silent print:info",
        "print:info": "node -e \"console.log('\\nğŸš€ WebBuddy Frontend\\nğŸ“¦ Node:', process.version, '\\nğŸ“ CWD:', process.cwd(), '\\nğŸŒ ENV:', process.env.NODE_ENV || 'development')\""
    },
    "devDependencies": {
        "@devantic/diaper": "^2.2.2",
        "@eslint/compat": "^1.3.2",
        "@eslint/js": "^9.33.0",
        "@internationalized/date": "^3.8.2",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "cross-env": "^7.0.3",
        "lint-staged": "^15.2.10",
        "npm-check-updates": "^17.1.3",
        "rimraf": "^6.0.1",
        "vite-bundle-analyzer": "^0.18.0",
        "@shikijs/langs": "^3.8.1",
        "@shikijs/themes": "^3.8.1",
        "@sveltejs/adapter-auto": "^6.0.2",
        "@sveltejs/kit": "^2.27.3",
        "@sveltejs/vite-plugin-svelte": "^6.1.1",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16",
        "@tailwindcss/vite": "^4.1.11",
        "@vitest/browser": "^3.2.4",
        "autoprefixer": "^10.4.21",
        "bits-ui": "^2.9.2",
        "clsx": "^2.1.1",
        "daisyui": "^5.0.50",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.11.0",
        "globals": "^16.3.0",
        "isomorphic-dompurify": "^2.26.0",
        "paneforge": "^1.0.2",
        "playwright": "^1.54.2",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "runed": "^0.29.2",
        "shiki": "^3.8.1",
        "svelte": "^5.38.0",
        "svelte-check": "^4.3.1",
        "svelte-sonner": "^1.0.5",
        "svelte-toolbelt": "^0.9.3",
        "tailwind-merge": "^3.3.1",
        "tailwind-variants": "^1.0.0",
        "tailwindcss": "^4.1.11",
        "tw-animate-css": "^1.3.6",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.0",
        "typescript-svelte-plugin": "^0.3.49",
        "vaul-svelte": "^1.0.0-next.7",
        "vite-plugin-devtools-json": "^0.2.1",
        "vitest": "^3.2.4",
        "vitest-browser-svelte": "^0.1.0"
    },
    "dependencies": {
        "@lucide/svelte": "^0.539.0",
        "@tailwindcss/postcss": "^4.1.11",
        "@types/node": "^24.2.1",
        "bun": "^1.2.20",
        "canvas": "^3.1.2",
        "konva": "^9.3.22",
        "mode-watcher": "^1.1.0",
        "svelte-konva": "^0.3.1",
        "vite": "^7.1.1"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "lint-staged": {
        "*.{js,ts,svelte}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,css,html}": [
            "prettier --write"
        ]
    }
}
