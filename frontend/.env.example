# WebBuddy Frontend Environment Configuration
# Copy this file to .env.local and customize for your environment

# Development Configuration
VITE_APP_TITLE="WebBuddy"
VITE_APP_DESCRIPTION="Web application for managing digital screens and assets"

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_ANALYTICS=false

# Build Configuration
VITE_BUILD_VERSION=development
VITE_BUILD_TIMESTAMP=

# External Services
VITE_SENTRY_DSN=
VITE_POSTHOG_KEY=

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_PREVIEW_MODE=false